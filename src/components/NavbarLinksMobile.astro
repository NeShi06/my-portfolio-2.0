---
import { Icon } from 'astro-icon/components'

import LangSelector from '@/components/LangSelector.astro'

interface Props {
  links: {
    title: string
    label: string
    url: string
  }[]
}

const { links } = Astro.props
---

<input id="navbar-menu" type="checkbox" class="peer hidden" />

<label for="navbar-menu" class="block lg:hidden">
  <Icon name="menu" size={30} class="text-white" />
</label>

<ul
  class="absolute right-[5%] top-full hidden flex-col items-center justify-center gap-4 rounded-xl bg-primary p-3 peer-checked:flex lg:hidden"
>
  {
    links.map(({ title, url, label }) => (
      <li class="text-emerald-500">
        <a
          href={url}
          class="relative font-roboto text-sm tracking-wide transition-colors after:absolute after:-bottom-[6px] after:left-1/2 after:h-[1.25px] after:w-3/4 after:-translate-x-1/2 after:scale-x-0 after:rounded-full after:bg-emerald-300 after:transition-transform after:duration-300 hover:text-emerald-300"
          aria-label={label}
        >
          {title}
        </a>
      </li>
    ))
  }
  <li>
    <LangSelector />
  </li>
</ul>
