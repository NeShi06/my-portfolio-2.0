---
import MyProjects1 from '@/components/MyProjects'
import { getI18N } from '@/i18n'
import { projectsData } from '@/data/projects.data'

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })
const {
  pages: {
    index: { content }
  }
} = i18n
---

<article>
  <h3 class="text-white font-roboto mb-6 mt-4 text-2xl font-bold tracking-wider">
    {content.projects}
  </h3>

  <MyProjects1 projects={projectsData(content.myprojects)} client:visible />
</article>