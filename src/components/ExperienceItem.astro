---
import { Icon } from 'astro-icon/components'

const { item } = Astro.props

const { time, title, body, link } = item
---

<li class="ms-8">            
  <span class="absolute flex items-center justify-center w-2 h-2 rounded-full -start-1 ring-4 ring-emerald-900 bg-green-500" />

  <h3 class="flex items-center mb-1 text-lg font-semibold font-roboto text-gray-900 dark:text-white">
    {title}    
  </h3>

  <time class="block mb-4 text-sm font-normal font-roboto leading-none text-emerald-400/90">
    {time}
  </time>

  <p class="mb-4 text-sm font-normal font-roboto text-gray-400 max-w-[70ch] text-pretty">
    {body}
  </p>

  {
    link && (
      <a href="#" class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:outline-none focus:ring-gray-100 focus:text-blue-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700 dark:focus:ring-gray-700">
        <Icon name="external-link" size={14} />

        {link}
      </a>
    )
  }
</li>
